<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addFoodScreen">

    <EditText
        android:id="@+id/inputCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/enterCalories"
        android:layout_marginLeft="210dp"
        android:inputType="number"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/inputCarbs"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_alignBottom="@+id/enterCarb"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/inputFat"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_alignBottom="@+id/enterFats"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/inputProtein"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_alignBottom="@+id/enterProtein"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/enterCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="Enter Calories:"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/enterCarb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enterCalories"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="Enter Carbs:"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/enterFats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enterCalories"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:text="Enter Fats:"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/enterProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/enterCalories"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:text="Enter Protein:"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/addFood"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:text="ADD FOOD" />

    <Button
        android:id="@+id/customFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="Custom Food" />


</RelativeLayout>